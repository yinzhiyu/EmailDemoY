<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<style name="AppBaseTheme" parent="android:Theme.Light"/>-->
    <!--<style name="AppTheme" parent="AppBaseTheme"/>-->

    <style name="btn_base">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/s_btn_normal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="btn_login" parent="@style/btn_base">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/s_btn_login</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="login_page_wrap">
        <item name="android:background">@drawable/s_login_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="login_background">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="login_field">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHint">#ffa0a0a0</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">40.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
    </style>

    <style name="input_del">
        <item name="android:background">@drawable/login_input_del</item>
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
    </style>

</resources>
